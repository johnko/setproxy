#!/bin/sh
######################################################################
# Script version is yymmdd-HHMMSS in UTC, date -u +%y%m%d-%H%M%S
######################################################################
SCRIPTVERSION=150620-073447

cat /usr/local/etc/pkg.conf.sample >/usr/local/etc/pkg.conf

for i in .cshrc .profile ; do
    cat /root/${i} | grep -v 'HTTP_PROXY' >/root/${i}.tmp
    cat /root/${i}.tmp >/root/${i}
    rm  /root/${i}.tmp
done
